{
  "name": "gherkin",
  "displayName": "gherkin",
  "description": "Syntax highlighting for Gherkin",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "feature",
        "aliases": [
          "Gherkin",
          "feature"
        ],
        "extensions": [
          ".feature"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/icon.svg",
          "dark": "./images/icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "feature",
        "scopeName": "text.gherkin.feature",
        "path": "./syntaxes/gherkin.tmLanguage"
      }
    ]
  },
  "devDependencies": {
    "@cucumber/gherkin": "^28.0.0",
    "mustache": "^4.2.0"
  }
}
